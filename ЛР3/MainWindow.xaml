<Window x:Class="ЛР3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ЛР3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Просмотр погоды" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Height="47"/>
        <ScrollViewer Margin="10,70,10,70" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="wrapPanelWeather" Height="Auto" Width="Auto"/>
        </ScrollViewer>
        <Label x:Name="labelLoad"  Content="Загрузка" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Height="47"/>
        <Button x:Name="buttonMinus" Content="Прошлые 25" Margin="10,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="45" Width="100" Click="buttonMinus_Click"/>
        <Button x:Name="buttonPlus" Content="Следующие 25" Margin="690,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="45" Width="100" Click="buttonPlus_Click"/>


    </Grid>
</Window>
